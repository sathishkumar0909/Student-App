<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mark">

    <TextView
        android:id="@+id/cat1txt"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT 1 :"/>
    <EditText
        android:id="@+id/cat1"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/cat1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT1MARK:"/>
    <TextView
        android:id="@+id/cat2txt"
        android:layout_below="@id/cat1txt"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT 2 :"/>
    <EditText
        android:id="@+id/cat2"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/cat1txt"
        android:layout_toRightOf="@id/cat2txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT2MARK:"/>
    <TextView
        android:id="@+id/da1txt"
        android:layout_below="@id/cat2txt"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA 1 :"/>
    <EditText
        android:id="@+id/da1"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/cat2txt"
        android:layout_toRightOf="@id/da1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA1MARK:"/>
    <TextView
        android:id="@+id/da2txt"
        android:layout_below="@id/da1txt"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA 2 :"/>
    <EditText
        android:id="@+id/da2"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/da1txt"
        android:layout_toRightOf="@id/da2txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA2MARK:"/>
    <TextView
        android:id="@+id/da3txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/da2txt"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="DA 3 :"/>
    <EditText
        android:id="@+id/da3"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/da2txt"
        android:layout_toRightOf="@id/da3txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA3MARK:"/>
    <TextView
        android:id="@+id/internaltxt"
        android:layout_below="@id/da3txt"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal's :"/>
    <EditText
        android:id="@+id/internal"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/da3txt"
        android:layout_toRightOf="@id/internaltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="internals"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="54dp"
        android:text="Button" />

</RelativeLayout>