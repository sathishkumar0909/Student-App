<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6AD3D5D1"
    android:gravity="center"
    tools:context=".admin_home">

    <TextView
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:letterSpacing="0.1"
        android:text="WELCOME TO ADMIN  PAGE"
        android:textColor="#4E4D4D"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:columnCount="2"
        android:rowCount="3">


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner"            android:id="@+id/profileview"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/search"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Profile View"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:id="@+id/markbtn"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/upload"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Mark Upload"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/facattendancebtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/attendance"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Attendance"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addproctor"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/adduser"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Add Proctor"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/message"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Notification"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/examschedule"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/schedule"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Exam Schedule Upload"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminlogout"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logout"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Logout"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>