<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".timetable">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course title"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/coursetitle1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coursetitle1"
                android:text="Slot"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:id="@+id/slot1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slot1"
                android:textSize="15dp"
                android:text="Faculty Name"
                android:layout_marginTop="5dp"
                android:id="@+id/facultyname1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:id="@+id/time1"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course title"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/coursetitle2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coursetitle2"
                android:text="Slot"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:id="@+id/slot2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slot2"
                android:textSize="15dp"
                android:text="Faculty Name"
                android:layout_marginTop="5dp"
                android:id="@+id/facultyname2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:id="@+id/time2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course title"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/coursetitle3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coursetitle3"
                android:text="Slot"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:id="@+id/slot3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slot3"
                android:textSize="15dp"
                android:text="Faculty Name"
                android:layout_marginTop="5dp"
                android:id="@+id/facultyname3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:id="@+id/time3"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>