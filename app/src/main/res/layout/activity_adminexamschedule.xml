<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".adminexamschedule">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Exam Schedule"
    android:textSize="25dp"
    android:fontFamily="@font/poppinsbold"
    />
    <Spinner
        android:id="@+id/adminexamcoursespin"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/adminexamdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:hint="Date"
        />
    <EditText
        android:id="@+id/adminexamtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:hint="Time"
        />
    <EditText
        android:id="@+id/adminexamvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:hint="Venue"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adminexamupload"
        android:text="Upload"
        android:layout_marginTop="20dp"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>
</LinearLayout>