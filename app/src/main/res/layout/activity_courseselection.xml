<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".courseselection">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Select Your Courses"
        />

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="9.00-9.50"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="9.55-10.45"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="10.50-11.40"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="2.00-2.50"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="2.55-3.45"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="3.50-4.40"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:id="@+id/course6"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:background="@color/purple_200"
        android:text="Submit"
        />
</LinearLayout>